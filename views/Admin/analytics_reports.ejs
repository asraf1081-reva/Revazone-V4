<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Analytics & Reports | Reva Platform</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
        }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <!-- Chart.js for data visualization -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style> 
        body { font-family: 'Inter', sans-serif; } 
    </style>
</head>
<body class="bg-slate-100 dark:bg-gray-900 text-slate-800 dark:text-slate-200 transition-colors duration-300">
    <div class="flex">

        <%- include('partials_ad/sidebar_ad') %>

        <main class="flex-1 h-screen overflow-y-auto p-6 md:p-8">
            <!-- Header -->
            <header class="flex justify-between items-center mb-8">
                <div>
                    <h1 class="text-3xl font-bold text-slate-900 dark:text-white">Analytics & Reports</h1>
                    <p class="text-slate-500 dark:text-slate-400 mt-1">Insights into consumption patterns and financial performance.</p>
                </div>
                 <div class="flex items-center gap-4">
                    <div class="relative" id="user-dropdown">
                        <button id="dropdown-toggle" class="flex items-center gap-2 p-2 rounded-lg hover:bg-slate-200 dark:hover:bg-slate-700">
                            <span class="font-semibold text-sm"><%= user.name %></span>
                            <i class="fas fa-chevron-down text-xs"></i>
                        </button>
                        <div id="dropdown-menu" class="absolute hidden right-0 mt-2 w-48 bg-white dark:bg-slate-800 rounded-lg shadow-xl z-10 border border-slate-200 dark:border-slate-700 py-1">
                            <a href="/logout" class="flex items-center gap-3 px-4 py-2 text-sm text-slate-700 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-700">
                                <i class="fa-solid fa-arrow-right-from-bracket"></i>
                                <span>Logout</span>
                            </a>
                        </div>
                    </div>
                    <button id="theme-toggle" class="w-10 h-10 flex items-center justify-center rounded-lg hover:bg-slate-200 dark:hover:bg-slate-700">
                        <i class="fas fa-moon"></i>
                    </button>
                </div>
            </header>

            <!-- Tabs Navigation -->
            <div class="mb-6">
                <div class="border-b border-slate-200 dark:border-gray-700">
                    <nav class="-mb-px flex space-x-8" aria-label="Tabs">
                        <a href="#" id="tab-analytics" class="tab-link border-red-500 text-red-600 dark:text-red-400 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">Usage & Consumption Analytics</a>
                        <a href="#" id="tab-reports" class="tab-link border-transparent text-slate-500 dark:text-slate-400 hover:text-slate-700 dark:hover:text-slate-300 hover:border-slate-300 dark:hover:border-gray-600 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">Reports Hub</a>
                    </nav>
                </div>
            </div>

            <!-- Usage & Consumption Analytics Content -->
            <div id="content-analytics" class="tab-content space-y-8">
                <!-- Filters -->
                <div class="flex flex-wrap gap-4 items-center">
                    <select class="w-full sm:w-auto rounded-md border-slate-300 dark:border-gray-600 bg-white dark:bg-gray-800 sm:text-sm">
                        <option>All Geographic Areas</option>
                        <option selected>Riyadh</option>
                        <option>Jeddah</option>
                    </select>
                     <select class="w-full sm:w-auto rounded-md border-slate-300 dark:border-gray-600 bg-white dark:bg-gray-800 sm:text-sm">
                        <option>All Customer Types</option>
                        <option>Residential</option>
                        <option>Commercial</option>
                    </select>
                    <input type="date" class="w-full sm:w-auto rounded-md border-slate-300 dark:border-gray-600 bg-white dark:bg-gray-800 sm:text-sm">
                </div>
                
                <!-- Main Analytics Grid -->
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                    <!-- Aggregated Usage Chart -->
                    <div class="lg:col-span-2 bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 border border-slate-200 dark:border-gray-700">
                         <h3 class="text-lg font-semibold text-slate-800 dark:text-white mb-4">Aggregated Water Usage in Riyadh (m³)</h3>
                         <div class="h-80">
                            <canvas id="aggregatedUsageChart"></canvas>
                         </div>
                    </div>
                    <!-- Peak Demand -->
                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 border border-slate-200 dark:border-gray-700 space-y-4">
                        <h3 class="text-lg font-semibold text-slate-800 dark:text-white">Peak Demand Analysis (Riyadh)</h3>
                        <div>
                             <p class="text-sm text-slate-500 dark:text-slate-400">Peak Hour (Today)</p>
                             <p class="text-2xl font-bold text-red-600">16:00 - 17:00</p>
                        </div>
                         <div>
                             <p class="text-sm text-slate-500 dark:text-slate-400">Peak Consumption</p>
                             <p class="text-2xl font-bold text-slate-800 dark:text-white">850 m³/hr</p>
                        </div>
                         <div>
                             <p class="text-sm text-slate-500 dark:text-slate-400">Compared to Average</p>
                             <p class="text-lg font-semibold text-red-600 flex items-center"><i class="fas fa-arrow-up mr-2"></i> 3% Higher than yesterday</p>
                        </div>
                    </div>
                </div>
                 <!-- Forecasting & Leaks Grid -->
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                    <div class="lg:col-span-2 bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 border border-slate-200 dark:border-gray-700">
                         <h3 class="text-lg font-semibold text-slate-800 dark:text-white mb-4">Consumption Forecasting for Riyadh (Next 7 Days)</h3>
                         <div class="h-80">
                            <canvas id="forecastingChart"></canvas>
                         </div>
                    </div>
                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 border border-slate-200 dark:border-gray-700">
                        <h3 class="text-lg font-semibold text-slate-800 dark:text-white mb-4">Potential Leaks Detected (Riyadh)</h3>
                        <ul class="space-y-3">
                            <li class="flex items-center justify-between p-3 rounded-md bg-red-50 dark:bg-red-900/20">
                                <div>
                                    <p class="font-mono text-sm font-semibold">NWC-589745</p>
                                    <p class="text-xs text-slate-500">Night flow higher than average</p>
                                </div>
                                <a href="#" class="text-red-500 text-sm font-semibold hover:underline">Investigate</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Reports Hub Content -->
            <div id="content-reports" class="tab-content hidden space-y-8">
                <!-- Pre-built Reports -->
                <div>
                     <h2 class="text-2xl font-bold mb-4 text-slate-900 dark:text-white">Pre-built Reports</h2>
                     <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        <!-- Report Card -->
                        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 border border-slate-200 dark:border-gray-700">
                            <h3 class="text-lg font-semibold text-slate-800 dark:text-white">Billing Summary</h3>
                            <p class="text-sm text-slate-500 dark:text-slate-400 mt-1 mb-4">Collected vs. Outstanding revenue for a selected period.</p>
                            <button class="download-report-btn w-full bg-red-500 text-white font-semibold py-2 rounded-lg hover:bg-red-600"><i class="fas fa-download mr-2"></i>Download</button>
                        </div>
                        <!-- Report Card -->
                        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 border border-slate-200 dark:border-gray-700">
                            <h3 class="text-lg font-semibold text-slate-800 dark:text-white">Usage By Region</h3>
                            <p class="text-sm text-slate-500 dark:text-slate-400 mt-1 mb-4">Total consumption aggregated by geographic service area.</p>
                            <button class="download-report-btn w-full bg-red-500 text-white font-semibold py-2 rounded-lg hover:bg-red-600"><i class="fas fa-download mr-2"></i>Download</button>
                        </div>
                     </div>
                </div>
                
                <!-- Custom Report Builder -->
                <div>
                    <h2 class="text-2xl font-bold mb-4 text-slate-900 dark:text-white">Custom Report Builder</h2>
                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 border border-slate-200 dark:border-gray-700">
                        <form id="custom-report-form" class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
                            <div>
                                <label for="report-name" class="block text-sm font-medium text-slate-700 dark:text-slate-300">Report Name</label>
                                <input type="text" id="report-name" placeholder="e.g., Q4 Commercial Usage" class="mt-1 block w-full rounded-md border-slate-300 dark:border-gray-600 bg-white dark:bg-gray-700 sm:text-sm">
                            </div>
                             <div>
                                <label for="report-type" class="block text-sm font-medium text-slate-700 dark:text-slate-300">Data Source</label>
                                <select id="report-type" class="mt-1 w-full rounded-md border-slate-300 dark:border-gray-600 bg-white dark:bg-gray-700 sm:text-sm">
                                    <option>Consumption Data</option>
                                    <option>Billing Data</option>
                                    <option>Customer Data</option>
                                </select>
                            </div>
                            <div class="md:col-span-2">
                                <label class="block text-sm font-medium text-slate-700 dark:text-slate-300">Columns to Include</label>
                                <div class="mt-2 grid grid-cols-2 md:grid-cols-4 gap-4">
                                     <label class="flex items-center"><input type="checkbox" class="h-4 w-4 rounded border-gray-300 text-red-600 focus:ring-red-500" checked><span class="ml-2 text-sm">Customer ID</span></label>
                                     <label class="flex items-center"><input type="checkbox" class="h-4 w-4 rounded border-gray-300 text-red-600 focus:ring-red-500" checked><span class="ml-2 text-sm">Customer Name</span></label>
                                     <label class="flex items-center"><input type="checkbox" class="h-4 w-4 rounded border-gray-300 text-red-600 focus:ring-red-500" checked><span class="ml-2 text-sm">Total Consumption (m³)</span></label>
                                     <label class="flex items-center"><input type="checkbox" class="h-4 w-4 rounded border-gray-300 text-red-600 focus:ring-red-500"><span class="ml-2 text-sm">Peak Usage</span></label>
                                </div>
                            </div>
                            <div>
                                <label for="start-date" class="block text-sm font-medium text-slate-700 dark:text-slate-300">Start Date</label>
                                <input type="date" id="start-date" class="mt-1 block w-full rounded-md border-slate-300 dark:border-gray-600 bg-white dark:bg-gray-700 sm:text-sm">
                            </div>
                             <div>
                                <label for="end-date" class="block text-sm font-medium text-slate-700 dark:text-slate-300">End Date</label>
                                <input type="date" id="end-date" class="mt-1 block w-full rounded-md border-slate-300 dark:border-gray-600 bg-white dark:bg-gray-700 sm:text-sm">
                            </div>
                             <div class="md:col-span-2 flex justify-end pt-4">
                                <button type="submit" class="bg-red-600 text-white font-semibold px-6 py-2 rounded-lg hover:bg-red-700">Generate & Download Report</button>
                             </div>
                        </form>
                    </div>
                </div>
            </div>

        </main>
    </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // --- Tab Switching Logic ---
            const tabs = document.querySelectorAll('.tab-link');
            const contents = document.querySelectorAll('.tab-content');
            tabs.forEach(tab => {
                tab.addEventListener('click', (e) => {
                    e.preventDefault();
                    const targetId = tab.id.replace('tab-', 'content-');
                    tabs.forEach(t => {
                        t.classList.remove('border-red-500', 'text-red-600', 'dark:text-red-400');
                        t.classList.add('border-transparent', 'text-slate-500', 'dark:text-slate-400');
                    });
                    tab.classList.add('border-red-500', 'text-red-600', 'dark:text-red-400');
                    tab.classList.remove('border-transparent', 'text-slate-500', 'dark:text-slate-400');
                    contents.forEach(content => { content.classList.toggle('hidden', content.id !== targetId); });
                });
            });
            
             // --- Reports Hub Functionality ---
            document.querySelectorAll('.download-report-btn').forEach(button => {
                button.addEventListener('click', () => {
                    alert('Simulating report download...');
                });
            });

            document.getElementById('custom-report-form').addEventListener('submit', (e) => {
                e.preventDefault();
                alert('Simulating custom report generation and download...');
            });

            // --- Chart.js Initializations ---
            const isDarkMode = () => document.documentElement.classList.contains('dark');
            
            const getChartColors = () => {
                return {
                    textColor: isDarkMode() ? 'rgba(255, 255, 255, 0.7)' : 'rgba(0, 0, 0, 0.7)',
                    gridColor: isDarkMode() ? 'rgba(255, 255, 255, 0.1)' : 'rgba(0, 0, 0, 0.1)'
                };
            };
            
            // Aggregated Usage Chart (Riyadh Data)
            const ctxUsage = document.getElementById('aggregatedUsageChart').getContext('2d');
            const aggregatedUsageChart = new Chart(ctxUsage, {
                type: 'bar',
                data: {
                    labels: ['Residential', 'Commercial', 'Industrial', 'Government'],
                    datasets: [{
                        label: 'Total Consumption (m³)',
                        data: [9500, 6200, 11500, 3200], // Riyadh-specific data
                        backgroundColor: 'rgba(220, 38, 38, 0.6)',
                        borderColor: 'rgba(220, 38, 38, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: { 
                            beginAtZero: true,
                             ticks: { color: getChartColors().textColor },
                             grid: { color: getChartColors().gridColor } 
                        },
                        x: { 
                            ticks: { color: getChartColors().textColor },
                            grid: { color: getChartColors().gridColor }
                        }
                    },
                    plugins: { legend: { labels: { color: getChartColors().textColor } } }
                }
            });

            // Forecasting Chart (Riyadh Data)
            const ctxForecast = document.getElementById('forecastingChart').getContext('2d');
            const forecastingChart = new Chart(ctxForecast, {
                type: 'line',
                data: {
                    labels: ['Day 1', 'Day 2', 'Day 3', 'Day 4', 'Day 5', 'Day 6', 'Day 7'],
                    datasets: [{
                        label: 'Forecasted Consumption (m³)',
                        data: [31000, 31500, 31200, 32000, 32500, 32100, 33000], // Riyadh-specific data
                        fill: false,
                        borderColor: 'rgba(220, 38, 38, 1)',
                        tension: 0.1
                    }]
                },
                 options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                         y: { 
                             ticks: { color: getChartColors().textColor },
                             grid: { color: getChartColors().gridColor } 
                         },
                         x: { 
                             ticks: { color: getChartColors().textColor },
                             grid: { color: getChartColors().gridColor }
                         }
                    },
                    plugins: { legend: { labels: { color: getChartColors().textColor } } }
                }
            });
            
             const updateChartColors = () => {
                 const newColors = getChartColors();
                 
                 [aggregatedUsageChart, forecastingChart].forEach(chart => {
                     chart.options.scales.y.ticks.color = newColors.textColor;
                     chart.options.scales.x.ticks.color = newColors.textColor;
                     chart.options.scales.y.grid.color = newColors.gridColor;
                     chart.options.scales.x.grid.color = newColors.gridColor;
                     chart.options.plugins.legend.labels.color = newColors.textColor;
                     chart.update();
                 });
            };

        });
    </script>
    <%- include('partials_ad/scripts_ad') %>
</body>
</html>

