                    const sendInvitation = document.getElementById('send-invitation').checked;
                    if (name && email) {
                        const newId = 'user' + (Object.keys(users).length + 1);
                        users[newId] = {
                            name,
                            email,
                            status: 'Pending',
                            permissions: { 
