                             <form class="space-y-4" id="data-correction-form">
                                <div>
                                    <label for="record-id" class="block text-sm font-medium text-slate-700 dark:text-slate-300">Record ID (e.g., Meter or Customer ID)</label>
                                    <input type="text" id="record-id" class="mt-1 block w-full rounded-md border-slate-300 dark:border-gray-600 bg-white dark:bg-gray-700 sm:text-sm" placeholder="SA-CUST-001">
                                </div>
                                <button type="submit" class="bg-red-500 text-white font-semibold px-4 py-2 rounded-lg hover:bg-red-600 text-sm">Fetch Record</button>
                             </form>
                             <div id="fetched-record-container" class="mt-4 hidden">
                                 <label class="block text-sm font-medium text-slate-700 dark:text-slate-300">Fetched Record Data (JSON)</label>
                                 <textarea id="fetched-record-data" rows="6" class="mt-1 font-mono text-xs block w-full rounded-md border-slate-300 dark:border-gray-600 bg-slate-50 dark:bg-gray-900 sm:text-sm"></textarea>
