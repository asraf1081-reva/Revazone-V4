    <div id="manage-meter-details-modal" class="fixed inset-0 z-50 hidden items-center justify-center overflow-y-auto">
        <div class="modal-backdrop fixed inset-0"></div>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl w-full max-w-2xl m-4 z-10 flex flex-col">
            <div class="flex justify-between items-center p-5 border-b border-slate-200 dark:border-gray-700">
                <h3 class="text-xl font-semibold text-slate-900 dark:text-white">Meter Details</h3>
                <button id="close-manage-details-btn" class="text-slate-400 hover:text-slate-600 dark:hover:text-white"><i class="fas fa-times text-xl"></i></button>
            </div>
            <div id="manage-modal-body" class="p-6 space-y-4">
                </div>
            <div class="flex justify-end items-center p-5 border-t border-slate-200 dark:border-gray-700 bg-slate-50 dark:bg-gray-800/50 rounded-b-lg">
                <button id="cancel-manage-details-btn" type="button" class="bg-white dark:bg-gray-700 py-2 px-4 border border-slate-300 dark:border-gray-600 rounded-md shadow-sm text-sm font-medium text-slate-700 dark:text-slate-200 hover:bg-slate-50 dark:hover:bg-gray-600">Close</button>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {

            // --- Modal Logic ---
            function setupModal(modalId, openBtnId, closeBtnId, cancelBtnId) {
                const modal = document.getElementById(modalId);
                const openBtn = document.getElementById(openBtnId);
                const closeBtn = document.getElementById(closeBtnId);
                const cancelBtn = document.getElementById(cancelBtnId);
                const backdrop = modal.querySelector('.modal-backdrop');
                const open = () => { modal.classList.remove('hidden'); modal.classList.add('flex'); };
                const close = () => { modal.classList.add('hidden'); modal.classList.remove('flex'); };
                if (openBtn) openBtn.addEventListener('click', open);
                if (closeBtn) closeBtn.addEventListener('click', close);
                if (cancelBtn) cancelBtn.addEventListener('click', close);
                if (backdrop) backdrop.addEventListener('click', close);
                return { open, close };
            }

            setupModal('provision-meter-modal', 'provision-meter-btn', 'close-provision-modal-btn', 'cancel-provision-modal-btn');
            
            // --- Manage Meter Details Modal ---
            const manageDetailsModal = document.getElementById('manage-meter-details-modal');
            const manageModalBody = document.getElementById('manage-modal-body');
            const tableBody = document.getElementById('meters-table-body');
            
            tableBody.addEventListener('click', (e) => {
                if (e.target.classList.contains('manage-meter-btn')) {
                    e.preventDefault();
                    const row = e.target.closest('tr');
                    const cells = row.getElementsByTagName('td');
                    
                    // Extract data from the row
                    const meterId = cells[0].textContent;
                    const customer = cells[1].textContent;
                    const lastRead = cells[2].textContent;
                    const signal = cells[3].innerHTML; // Get innerHTML to keep icon
                    const battery = cells[4].innerHTML; // Get innerHTML to keep icon
                    const status = cells[5].innerHTML; // Get innerHTML to keep badge
                    
                    // Build the content for the modal body
                    manageModalBody.innerHTML = `
                        <p><strong>Meter ID:</strong> <span class="font-mono">${meterId}</span></p>
                        <p><strong>Assigned Customer:</strong> ${customer}</p>
                        <p><strong>Last Read:</strong> ${lastRead}</p>
                        <p><strong>Signal (LTE):</strong> ${signal}</p>
                        <p><strong>Battery:</strong> ${battery}</p>
                        <p><strong>Status:</strong> ${status}</p>
                    `;
                    
                    manageDetailsModal.classList.remove('hidden');
                    manageDetailsModal.classList.add('flex');
                }
            });

            const closeManageDetails = () => {
                manageDetailsModal.classList.add('hidden');
                manageDetailsModal.classList.remove('flex');
            };
            document.getElementById('close-manage-details-btn').addEventListener('click', closeManageDetails);
            document.getElementById('cancel-manage-details-btn').addEventListener('click', closeManageDetails);
            manageDetailsModal.querySelector('.modal-backdrop').addEventListener('click', closeManageDetails);


            // --- KPI Card Filtering Logic ---
            const kpiCards = document.querySelectorAll('.kpi-card');
            const meterRows = document.querySelectorAll('#meters-table-body tr');

            kpiCards.forEach(card => {
                card.addEventListener('click', () => {
                    // Update active card style
                    kpiCards.forEach(c => c.classList.replace('border-red-500', 'border-transparent'));
                    card.classList.replace('border-transparent', 'border-red-500');

                    const filterType = card.id;

                    meterRows.forEach(row => {
                        const statusCell = row.querySelector('.cell-status span');
                        const batteryCell = row.querySelectorAll('td')[4];
                        
                        let showRow = false;

                        if (filterType === 'kpi-total') {
                            showRow = true;
                        } else if (filterType === 'kpi-online') {
                            if (statusCell && statusCell.textContent.trim().toLowerCase() === 'online') {
                                showRow = true;
                            }
                        } else if (filterType === 'kpi-offline') {
                            if (statusCell && statusCell.textContent.trim().toLowerCase() === 'offline') {
                                showRow = true;
                            }
                        } else if (filterType === 'kpi-low-battery') {
                            if (batteryCell) {
                                const batteryText = batteryCell.textContent.trim();
                                const batteryPercentage = parseInt(batteryText.replace('%', ''));
                                if (!isNaN(batteryPercentage) && batteryPercentage < 50) {
                                    showRow = true;
                                }
                            }
                        }

                        row.style.display = showRow ? '' : 'none';
                    });
                });
            });
        });
    </script>
