    <script>
        document.addEventListener('DOMContentLoaded', () => {
             // --- Gemini API Call Function ---
            async function callGeminiAPI(prompt) {
                const apiKey = ""; // Keep this empty
                const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-05-20:generateContent?key=${apiKey}`;
                const payload = { contents: [{ parts: [{ text: prompt }] }], };
                try {
                    const response = await fetch(apiUrl, { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify(payload) });
                    if (!response.ok) { throw new Error(`HTTP error! status: ${response.status}`); }
                    const result = await response.json();
                    return result.candidates[0].content.parts[0].text;
                } catch (error) {
                    console.error("Error calling Gemini API:", error);
                    return "Error generating content.";
                }
            }

            // --- ✨ Gemini Feature: Generate Provisioning Command ---
            const genCommandBtn = document.getElementById('generate-command-btn');
            const commandOutputContainer = document.getElementById('command-output-container');
            const commandOutput = document.getElementById('command-output');
            const commandLoader = document.getElementById('command-loader');
            genCommandBtn.addEventListener('click', async () => {
                const serial = document.getElementById('meter-serial').value;
                const model = document.getElementById('meter-model').value;
                if (!serial || !model) {
                    alert('Please enter a serial number and model first.');
                    return;
                }
                
                commandOutputContainer.classList.remove('hidden');
                commandLoader.classList.remove('hidden');
                commandLoader.classList.add('flex');
                commandOutput.textContent = '';
                genCommandBtn.disabled = true;

                const prompt = `Generate a JSON object for provisioning a new water meter on an IoT platform. The JSON should include: serialNumber: "${serial}", model: "${model}", activationStatus: "pending", and a timestamp for "provisionDate".`;
                
                const result = await callGeminiAPI(prompt);
                commandOutput.textContent = result;

                commandLoader.classList.add('hidden');
                commandLoader.classList.remove('flex');
                genCommandBtn.disabled = false;
            });

            // --- ✨ Gemini Feature: Generate Sample CSV ---
            const genCsvBtn = document.getElementById('generate-csv-btn');
            const csvOutputContainer = document.getElementById('csv-output-container');
            const csvOutput = document.getElementById('csv-output');
            const csvLoader = document.getElementById('csv-loader');
            genCsvBtn.addEventListener('click', async () => {
                csvOutputContainer.classList.remove('hidden');
                csvLoader.classList.remove('hidden');
                csvLoader.classList.add('flex');
                csvOutput.textContent = '';
                genCsvBtn.disabled = true;

                const prompt = `Generate a sample CSV content with a header row and 3 rows of fake data for bulk importing water meters in Saudi Arabia. The columns should be "meter_serial" and "meter_model". Use realistic NWC format for serials.`;
                
                const result = await callGeminiAPI(prompt);
                csvOutput.textContent = result;
                
                csvLoader.classList.add('hidden');
                csvLoader.classList.remove('flex');
                genCsvBtn.disabled = false;
            });

            // --- Modal Logic ---
            function setupModal(modalId, openBtnId, closeBtnId, cancelBtnId) {
                const modal = document.getElementById(modalId);
                const openBtn = document.getElementById(openBtnId);
                const closeBtn = document.getElementById(closeBtnId);
                const cancelBtn = document.getElementById(cancelBtnId);
                const backdrop = modal.querySelector('.modal-backdrop');

                const open = () => { modal.classList.remove('hidden'); modal.classList.add('flex'); };
                const close = () => { modal.classList.add('hidden'); modal.classList.remove('flex'); };

                openBtn.addEventListener('click', open);
                closeBtn.addEventListener('click', close);
                cancelBtn.addEventListener('click', close);
                backdrop.addEventListener('click', close);
            }

            setupModal('provision-meter-modal', 'provision-meter-btn', 'close-provision-modal-btn', 'cancel-provision-modal-btn');
            setupModal('bulk-import-modal', 'bulk-import-btn', 'close-bulk-modal-btn', 'cancel-bulk-modal-btn');
            
            // NOTE: The dropdown and theme-toggle JS is likely in 'partials_ad/scripts_ad', 
            // which is correctly included. No changes needed here for that functionality.
        });
    </script>
