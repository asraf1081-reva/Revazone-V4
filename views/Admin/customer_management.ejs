    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // --- Gemini API Call Function ---
            async function callGeminiAPI(prompt) {
                const apiKey = ""; // Keep this empty
                const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-05-20:generateContent?key=${apiKey}`;
                
                const payload = {
                    contents: [{ parts: [{ text: prompt }] }],
                };

                try {
                    const response = await fetch(apiUrl, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    if (!response.ok) {
                        console.error("API Error Response:", await response.text());
                        return `Error: Received status ${response.status}. Please check the console for details.`;
                    }

                    const result = await response.json();
                    if (result.candidates && result.candidates[0].content.parts[0].text) {
                        return result.candidates[0].content.parts[0].text;
                    } else {
                        return "Sorry, I couldn't generate a response. The API returned an unexpected format.";
                    }
                } catch (error) {
                    console.error("Error calling Gemini API:", error);
                    return "An error occurred while contacting the AI service.";
                }
            }

            // --- ✨ Gemini Feature: Generate Address Notes ---
            const generateNotesBtn = document.getElementById('generate-notes-btn');
            const notesTextarea = document.getElementById('service-address-notes');
            const notesLoader = document.getElementById('notes-loader');
            const addressGroup = document.getElementById('national-address-group');

            generateNotesBtn.addEventListener('click', async () => {
                const addressInputs = addressGroup.querySelectorAll('input');
                let addressString = "";
                addressInputs.forEach(input => {
                    if (input.value) {
                        addressString += `${input.placeholder}: ${input.value}, `;
                    }
                });

                if (!addressString) {
                    notesTextarea.value = "Please enter some address details first.";
                    return;
                }

                notesLoader.classList.remove('hidden');
                notesLoader.classList.add('flex');
                generateNotesBtn.disabled = true;

                const prompt = `Based on the following Saudi National Address, generate a brief, one-sentence helpful note in English for a technician to locate the property and water meter. Focus on practical landmarks if possible. Address: ${addressString.slice(0, -2)}`;
                
                const result = await callGeminiAPI(prompt);
                notesTextarea.value = result;

                notesLoader.classList.add('hidden');
                notesLoader.classList.remove('flex');
                generateNotesBtn.disabled = false;
            });


            // --- ✨ Gemini Feature: Summarize Meter Activity ---
            const summarizeBtn = document.getElementById('summarize-activity-btn');
            const summaryContainer = document.getElementById('activity-summary-container');
            const summaryText = document.getElementById('activity-summary-text');
            const summaryLoader = document.getElementById('summary-loader');

            summarizeBtn.addEventListener('click', async () => {
                const activityTable = document.getElementById('activity-table');
                const rows = activityTable.querySelectorAll('tbody tr');
                let activityData = "Date, Event, Reading (m³)\n";
                rows.forEach(row => {
                    activityData += `${row.cells[0].textContent}, ${row.cells[1].textContent}, ${row.cells[2].textContent}\n`;
                });

                summaryContainer.classList.remove('hidden');
                summaryText.classList.add('hidden');
                summaryLoader.classList.remove('hidden');
                summaryLoader.classList.add('flex');
                summarizeBtn.disabled = true;

                const prompt = `You are a helpful assistant for a water utility company in Saudi Arabia. Summarize the following water meter activity for a customer service agent. Highlight important events like disconnections or unusual readings in a concise, professional paragraph. Activity:\n${activityData}`;

                const result = await callGeminiAPI(prompt);
                summaryText.textContent = result;
                
                summaryLoader.classList.add('hidden');
                summaryLoader.classList.remove('flex');
                summaryText.classList.remove('hidden');
                summarizeBtn.disabled = false;
            });

            // --- Existing Tab and Modal Logic ---
            const tabs = document.querySelectorAll('.tab-link');
            const contents = document.querySelectorAll('.tab-content');

            tabs.forEach(tab => {
                tab.addEventListener('click', (e) => {
                    e.preventDefault();
                    const targetId = tab.id.replace('tab-', 'content-');
                    tabs.forEach(t => {
                        t.classList.remove('border-red-500', 'text-red-600', 'dark:text-red-400');
                        t.classList.add('border-transparent', 'text-slate-500', 'dark:text-slate-400');
                    });
                    tab.classList.add('border-red-500', 'text-red-600', 'dark:text-red-400');
                    tab.classList.remove('border-transparent', 'text-slate-500', 'dark:text-slate-400');
                    contents.forEach(content => {
                        content.classList.toggle('hidden', content.id !== targetId);
                    });
                });
            });

            // --- Onboard Customer Modal (Wizard) ---
            const onboardingModal = document.getElementById('onboarding-modal');
            const openAddCustomerBtn = document.getElementById('add-customer-btn');
            const openAssignMeterBtn = document.getElementById('assign-new-meter-btn');
            const closeOnboardingBtn = document.getElementById('close-onboarding-modal-btn');
            const cancelOnboardingBtn = document.getElementById('cancel-onboarding-btn');
            const onboardingBackdrop = onboardingModal.querySelector('.modal-backdrop');

            const backBtn = document.getElementById('back-step-btn');
            const nextBtn = document.getElementById('next-step-btn');
            const saveBtn = document.getElementById('save-customer-btn');
            const stepIndicator = document.getElementById('step-indicator');
            const steps = onboardingModal.querySelectorAll('.step-content');
            let currentStep = 1;

            const stepTitles = ["Step 1 of 3: Profile", "Step 2 of 3: Meter & Address", "Step 3 of 3: Documents"];

            function updateWizardView() {
                steps.forEach((step, index) => {
                    step.classList.toggle('hidden', (index + 1) !== currentStep);
                });
                stepIndicator.textContent = stepTitles[currentStep - 1];
                backBtn.classList.toggle('invisible', currentStep === 1);
                nextBtn.classList.toggle('hidden', currentStep === 3);
                saveBtn.classList.toggle('hidden', currentStep !== 3);
            }

            const openOnboardingModal = () => {
                currentStep = 1;
                updateWizardView();
                onboardingModal.classList.remove('hidden');
                onboardingModal.classList.add('flex');
            };

            const closeOnboardingModal = () => {
                onboardingModal.classList.add('hidden');
                onboardingModal.classList.remove('flex');
            };

            openAddCustomerBtn.addEventListener('click', openOnboardingModal);
            openAssignMeterBtn.addEventListener('click', openOnboardingModal);
            closeOnboardingBtn.addEventListener('click', closeOnboardingModal);
            cancelOnboardingBtn.addEventListener('click', closeOnboardingModal);
            onboardingBackdrop.addEventListener('click', closeOnboardingModal);

            nextBtn.addEventListener('click', () => {
                if (currentStep < 3) {
                    currentStep++;
                    updateWizardView();
                }
            });

            backBtn.addEventListener('click', () => {
                if (currentStep > 1) {
                    currentStep--;
                    updateWizardView();
                }
            });

            // --- Manage Meter Modal ---
            const manageModal = document.getElementById('manage-meter-modal');
            const manageBtns = document.querySelectorAll('.manage-meter-btn');
            const closeModalBtn = document.getElementById('close-meter-modal-btn');
            const cancelModalBtn = document.getElementById('cancel-meter-modal-btn');
            const manageBackdrop = manageModal.querySelector('.modal-backdrop');

            const openManageModal = (e) => {
                e.preventDefault();
                const row = e.target.closest('tr');
                document.getElementById('modal-meter-id').textContent = row.cells[0].textContent;
                document.getElementById('modal-customer-name').textContent = row.cells[1].textContent;
                document.getElementById('modal-service-address').textContent = row.cells[2].textContent;
                manageModal.classList.remove('hidden');
                manageModal.classList.add('flex');
            };
            const closeManageModal = () => {
                manageModal.classList.add('hidden');
                manageModal.classList.remove('flex');
                summaryContainer.classList.add('hidden');
                summaryText.textContent = '';
            };

            manageBtns.forEach(btn => btn.addEventListener('click', openManageModal));
            closeModalBtn.addEventListener('click', closeManageModal);
            cancelModalBtn.addEventListener('click', closeManageModal);
            manageBackdrop.addEventListener('click', closeManageModal);
        });
    </script>
