    <script>
        document.addEventListener('DOMContentLoaded', () => {
            let map, tileLayer;

            const isDarkMode = () => document.documentElement.classList.contains('dark');
// --- Chart.js Initializations ---
            const getChartColors = () => {
                return {
                    textColor: isDarkMode() ?
'rgba(255, 255, 255, 0.7)' : 'rgba(0, 0, 0, 0.7)',
                    gridColor: isDarkMode() ?
'rgba(255, 255, 255, 0.1)' : 'rgba(0, 0, 0, 0.1)',
                };
};

            // Performance Comparison Chart
            const ctxPerformance = document.getElementById('performanceComparisonChart').getContext('2d');
const performanceComparisonChart = new Chart(ctxPerformance, {
                type: 'bar',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                    datasets: [
              
           {
                            label: 'Revenue (SAR)',
                            data: [950000, 1050000, 1100000, 1020000, 1150000, 1200000],
                         
   backgroundColor: 'rgba(220, 38, 38, 0.6)',
                            yAxisID: 'y',
                        },
                         {
               
             label: 'Usage (m³)',
                            data: [28000, 28500, 29000, 28200, 29800, 30400],
                            backgroundColor: 'rgba(59, 130, 246, 0.6)', // blue-500
                 
           yAxisID: 'y1',
                        },
                    ]
                },
                options: {
           
          responsive: true,
                    scales: {
                        x: {
                            ticks: { color: getChartColors().textColor },
           
                  grid: { color: getChartColors().gridColor }
                        },
                        y: {
                            type: 
'linear',
                             display: true,
                            position: 'left',
                            beginAtZero: true,
            
                 ticks: { color: getChartColors().textColor },
                            grid: { color: getChartColors().gridColor },
                            title: { display: true, text: 'Revenue (SAR)', color: getChartColors().textColor }
          
               },
                        y1: {
                            type: 'linear',
                            display: true,
  
                           position: 'right',
                             beginAtZero: true,
                            ticks: { color: getChartColors().textColor },
          
                   grid: { drawOnChartArea: false },
                            title: { display: true, text: 'Usage (m³)', color: getChartColors().textColor }
                        },
                
    },
                     plugins: { legend: { labels: { color: getChartColors().textColor } } }
                }
            });
// --- Leaflet.js Map Initialization ---
            const updateMapTheme = () => {
                const stadiaApiKey = 'YOUR_STADIA_API_KEY';
// <-- IMPORTANT: REPLACE WITH YOUR KEY
                let theme = isDarkMode() ?
'alidade_smooth_dark' : 'alidade_smooth';
                let newUrl = `https://tiles.stadiamaps.com/tiles/${theme}/{z}/{x}/{y}{r}.png?api_key=${stadiaApiKey}`;
                
                if (tileLayer) {
                    tileLayer.setUrl(newUrl);
}
            };
// Center of Riyadh: 24.7136° N, 46.6753° E
            map = L.map('meterMap', { attributionControl: false }).setView([24.7136, 46.6753], 11);
const stadiaApiKey = 'YOUR_STADIA_API_KEY'; // <-- IMPORTANT: REPLACE WITH YOUR KEY
            const initialTheme = isDarkMode() ?
'alidade_smooth_dark' : 'alidade_smooth';
            
            tileLayer = L.tileLayer(
                `https://tiles.stadiamaps.com/tiles/${initialTheme}/{z}/{x}/{y}{r}.png?api_key=${stadiaApiKey}`, {
                maxZoom: 20,
                attribution: '&copy; <a href="https://stadiamaps.com/" target="_blank">Stadia Maps</a> &copy; <a href="https://openmaptiles.org/" target="_blank">OpenMapTiles</a> &copy; <a href="https://www.openstreetmap.org/copyright" target="_blank">OpenStreetMap</a>'
            }).addTo(map);
const meterData = [
                { id: 'NWC-589745', lat: 24.7742, lng: 46.7386, status: 'online', reading: '152.3 m³' },
                { id: 'NWC-365897', lat: 24.7088, lng: 46.6809, status: 'low_battery', reading: '91.8 m³' },
                { id: 'NWC-881234', lat: 24.6543, lng: 46.7121, status: 'offline', reading: '112.5 m³' },
             
    { id: 'NWC-123456', lat: 24.7251, lng: 46.6432, status: 'online', reading: '205.1 m³' },
            ];
const statusColors = {
                online: '#22c55e', // green-500
                low_battery: '#f59e0b', // amber-500
                offline: '#ef4444' // red-500
            };
meterData.forEach(meter => {
                const marker = L.circleMarker([meter.lat, meter.lng], {
                    radius: 8,
                    fillColor: statusColors[meter.status],
                    color: '#fff',
              
      weight: 2,
                    opacity: 1,
                    fillOpacity: 0.9
                }).addTo(map);

                marker.bindPopup(`
                   
  <div class="font-sans">
                        <p class="font-bold">Meter ID: <span class="font-mono">${meter.id}</span></p>
                        <p><strong>Status:</strong> ${meter.status.replace('_', ' ').replace(/\b\w/g, l => l.toUpperCase())}</p>
                        <p><strong>Last Reading:</strong> ${meter.reading}</p>
             
        </div>
                `);
            });

            // Map Modal Logic
            const maximizeBtn = document.getElementById('maximize-map-btn');
            const mapModal = document.getElementById('map-modal');
            const closeModalBtn = document.getElementById('close-modal-btn');
            const originalMapContainer = document.getElementById('meterMap');
            const modalMapContainer = document.getElementById('maximized-map-container');
            const originalMapParent = originalMapContainer.parentElement;
            
            maximizeBtn.addEventListener('click', () => {
                modalMapContainer.appendChild(originalMapContainer);
                mapModal.classList.remove('hidden');
                setTimeout(() => map.invalidateSize(), 100);
            });

            closeModalBtn.addEventListener('click', () => {
                originalMapParent.appendChild(originalMapContainer);
                mapModal.classList.add('hidden');
                setTimeout(() => map.invalidateSize(), 100);
            });


// This listener reacts to the theme change to update page-specific elements
            const themeToggle = document.getElementById('theme-toggle');
themeToggle.addEventListener('click', () => {
                 setTimeout(() => {
                    updateMapTheme();
                    const newColors = getChartColors();
                    performanceComparisonChart.options.scales.x.ticks.color = newColors.textColor;
            
        performanceComparisonChart.options.scales.y.ticks.color = newColors.textColor;
                    performanceComparisonChart.options.scales.y1.ticks.color = newColors.textColor;
                    performanceComparisonChart.options.scales.x.grid.color = newColors.gridColor;
                    performanceComparisonChart.options.scales.y.grid.color = newColors.gridColor;
                    performanceComparisonChart.options.plugins.legend.labels.color = newColors.textColor;
performanceComparisonChart.options.scales.y.title.color = newColors.textColor;
                    performanceComparisonChart.options.scales.y1.title.color = newColors.textColor;
                    performanceComparisonChart.update();
                 }, 50);
            });
        });
</script>
