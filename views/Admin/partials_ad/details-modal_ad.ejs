<div id="details-modal" class="fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center p-4 z-[1100] hidden">
    <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-2xl w-full max-w-4xl max-h-[90vh] flex flex-col">
        <div class="flex justify-between items-center p-6 border-b border-slate-200 dark:border-slate-700">
            <div>
                <h2 class="text-2xl font-bold text-slate-900 dark:text-white">Meter Details: <span id="modal-meter-id" class="text-[#C0392B]"></span></h2>
                <p id="modal-meter-location" class="text-slate-500 dark:text-slate-400 mt-1"></p>
            </div>
            <button id="modal-close-button" class="text-slate-400 hover:text-slate-600 dark:hover:text-slate-200">
                <i class="fa-solid fa-xmark fa-2x"></i>
            </button>
        </div>
        
        <div class="p-6 overflow-y-auto">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="md:col-span-1 space-y-4">
                    <div>
                        <p class="text-sm font-medium text-slate-500 dark:text-slate-400">Status</p>
                        <p id="modal-meter-status"></p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-slate-500 dark:text-slate-400">Meter Number</p>
                        <p id="modal-meter-number" class="text-slate-800 dark:text-slate-200 font-semibold"></p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-slate-500 dark:text-slate-400">Building Type</p>
                        <p id="modal-meter-building" class="text-slate-800 dark:text-slate-200 font-semibold"></p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-slate-500 dark:text-slate-400">Last Reading</p>
                        <p id="modal-meter-last" class="text-slate-800 dark:text-slate-200 font-semibold"></p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-slate-500 dark:text-slate-400">Total Readings</p>
                        <p id="modal-meter-total" class="text-slate-800 dark:text-slate-200 font-semibold"></p>
                    </div>
                </div>

                <div class="md:col-span-2">
                     <h3 class="text-lg font-semibold mb-2 text-slate-900 dark:text-white">Payment History</h3>
                     <div class="border border-slate-200 dark:border-slate-700 rounded-lg overflow-hidden">
                        <table class="min-w-full">
                            <thead class="bg-slate-50 dark:bg-slate-700">
                                <tr>
                                    <th class="px-4 py-2 text-left text-xs font-bold text-slate-500 dark:text-slate-400 uppercase">Date</th>
                                    <th class="px-4 py-2 text-left text-xs font-bold text-slate-500 dark:text-slate-400 uppercase">Bill Number</th>
                                    <th class="px-4 py-2 text-left text-xs font-bold text-slate-500 dark:text-slate-400 uppercase">Description</th>
                                    <th class="px-4 py-2 text-left text-xs font-bold text-slate-500 dark:text-slate-400 uppercase">Amount</th>
                                </tr>
                            </thead>
                            <tbody id="modal-payment-body" class="divide-y divide-slate-200 dark:divide-slate-700">
                            </tbody>
                        </table>
                     </div>
                </div>
            </div>
        </div>
    </div>
</div>