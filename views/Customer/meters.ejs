    <script>
        // A simple function to format the date and time
        function formatDateTime(date) {
            // Options for a user-friendly date format
            const dateOptions = { year: 'numeric', month: 'long', day: 'numeric' };
            // Options for a user-friendly time format
            const timeOptions = { hour: 'numeric', minute: '2-digit', hour12: true };

            const formattedDate = date.toLocaleDateString('en-US', dateOptions);
            const formattedTime = date.toLocaleTimeString('en-US', timeOptions);

            return `${formattedDate} at ${formattedTime}`;
        }

        // Function to generate a new meaningful reading value (simulated)
        function generateNewReading(currentReading) {
            // Convert the current reading string to an integer, removing commas
            const current = parseInt(currentReading.replace(/,/g, ''));
            
            // Generate a random increase between 5 and 50 (to simulate water usage)
            const increase = Math.floor(Math.random() * 46) + 5; 
            const newReading = current + increase;
            
            // Format the new reading with a comma separator
            return newReading.toLocaleString('en-US');
        }

        // The main function executed when the Refresh button is pressed
        function refreshReading() {
            const readingElement = document.getElementById('current-reading-value');
            const timeElement = document.getElementById('last-updated-time');
            
            // 1. Get the current displayed reading value (excluding the 'gal' unit)
            const currentReadingText = readingElement.textContent.split(' ')[0]; 

            // 2. Generate and update the new reading
            const newReading = generateNewReading(currentReadingText);
            readingElement.innerHTML = `${newReading} <span class="text-2xl font-medium text-sky-700 dark:text-sky-200">gal</span>`;

            // 3. Update the date and time
            const now = new Date();
            timeElement.textContent = formatDateTime(now);
        }

        // Run on page load to set the initial 'Last Updated' time to 'now'
        document.addEventListener('DOMContentLoaded', () => {
            const timeElement = document.getElementById('last-updated-time');
            const now = new Date();
            timeElement.textContent = formatDateTime(now);
        });
    </script>
