                        <div class="flex items-center gap-1 rounded-lg bg-slate-100 dark:bg-slate-700 p-1 text-sm">
                            <button id="weekly-btn" class="chart-tab-btn active px-3 py-1 font-semibold rounded-md">Weekly</button>
                            <button id="monthly-btn" class="chart-tab-btn px-3 py-1 font-semibold rounded-md">Monthly</button>
                            <button id="yearly-btn" class="chart-tab-btn px-3 py-1 font-semibold rounded-md">Yearly</button>
                        </div>
                    </div>
                    <div class="h-[40rem]">
                        <canvas id="consumptionChart"></canvas>
                    </div>
                </div>

                <div class="lg:col-span-1 space-y-8">
                    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-md p-6">
                        <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">Billing Cycle Comparison</h3>
                        <div class="space-y-3">
                            <div>
                                <p class="text-sm text-slate-500 dark:text-slate-400">This Cycle (so far)</p>
                                <p class="text-2xl font-bold text-slate-800 dark:text-slate-200">1,150 gal</p>
                            </div>
                            <div>
                                <p class="text-sm text-slate-500 dark:text-slate-400">Last Full Cycle</p>
                                <p class="text-2xl font-bold text-slate-800 dark:text-slate-200">4,300 gal</p>
                            </div>
                            <div class="text-center pt-2">
                                <p class="font-semibold text-green-600 dark:text-green-400">
                                    <i class="fa-solid fa-arrow-trend-down mr-1"></i> On track for 8% lower usage
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-md p-6">
                        <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">Usage Forecast</h3>
                        <p class="text-sm text-slate-500 dark:text-slate-400">Projected usage by end of period:</p>
                        <p class="text-4xl font-bold text-[#C0392B] my-2">~3,950 gal</p>
                        <div class="w-full bg-slate-200 dark:bg-slate-700 rounded-full h-2.5">
                            <div class="bg-[#C0392B] h-2.5 rounded-full" style="width: 91%;"></div>
                        </div>
                        <p class="text-xs text-slate-500 dark:text-slate-400 mt-2 text-right">vs. 4,300 gal last cycle</p>
                    </div>

                    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-md p-6">
                         <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">ðŸ’§ Water-Saving Tips</h3>
                         <ul class="space-y-3 text-sm text-slate-600 dark:text-slate-300">
                            <li class="flex items-start gap-3"><i class="fa-solid fa-faucet-drip mt-1 text-[#C0392B]"></i><span><strong>Fix leaks promptly.</strong> A small drip can waste over 20 gallons of water per day.</span></li>
                            <li class="flex items-start gap-3"><i class="fa-solid fa-broom mt-1 text-[#C0392B]"></i><span>Use a <strong>broom instead of a hose</strong> to clean driveways and sidewalks.</span></li>
                         </ul>
                    </div>
                </div>
            </section>
        </main>
    </div>
    
    <%- include('partials/scripts') %>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const chartServerData = <%- JSON.stringify(chartData) %>;
            const ctx = document.getElementById('consumptionChart').getContext('2d');
            
            const chartConfig = {
                type: 'line',
                data: {
                    labels: chartServerData.weekly.labels,
                    datasets: [{
                        label: 'Water Usage (gal)',
                        data: chartServerData.weekly.values,
                        backgroundColor: 'rgba(192, 57, 43, 0.2)',
                        borderColor: '#C0392B',
                        borderWidth: 3,
                        pointBackgroundColor: '#C0392B',
                        pointRadius: 5,
                        tension: 0.4,
                        fill: true,
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: { y: { beginAtZero: false } },
                    plugins: { legend: { display: false } }
                }
            };

            let consumptionChart = new Chart(ctx, chartConfig);

            const weeklyBtn = document.getElementById('weekly-btn');
            const monthlyBtn = document.getElementById('monthly-btn');
            const yearlyBtn = document.getElementById('yearly-btn');
            const allBtns = [weeklyBtn, monthlyBtn, yearlyBtn];

            const updateChart = (data) => {
                consumptionChart.data.labels = data.labels;
                consumptionChart.data.datasets[0].data = data.values;
                consumptionChart.update();
            };
            
            const setActiveTab = (activeBtn) => {
                 allBtns.forEach(btn => {
                    btn.classList.remove('active');
                    btn.style.backgroundColor = '';
                    btn.style.color = '';
                });
                activeBtn.classList.add('active');
                activeBtn.style.backgroundColor = document.body.classList.contains('dark') ? '#0F172A' : '#FFFFFF';
                activeBtn.style.color = '#C0392B';
            }

            weeklyBtn.addEventListener('click', () => {
                updateChart(chartServerData.weekly);
                setActiveTab(weeklyBtn);
            });
            monthlyBtn.addEventListener('click', () => {
                updateChart(chartServerData.monthly);
                setActiveTab(monthlyBtn);
            });
            yearlyBtn.addEventListener('click', () => {
                updateChart(chartServerData.yearly);
                setActiveTab(yearlyBtn);
            });
            
            setActiveTab(weeklyBtn);
        });
    </script>
