<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Settings | Reva Platform</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = { darkMode: 'class' }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <style> 
        body { font-family: 'Inter', sans-serif; } 
    </style>
</head>
<body class="bg-slate-100 dark:bg-slate-900 text-slate-800 dark:text-slate-200 transition-colors duration-300">
    <div class="flex">
        
        <%- include('partials/sidebar') %>

        <main class="flex-1 h-screen overflow-y-auto p-6 md:p-8">
            <header class="flex justify-between items-center mb-8">
                <div>
                    <h1 class="text-3xl font-bold text-slate-900 dark:text-white">Settings</h1>
                    <p class="text-slate-500 dark:text-slate-400 mt-1">Manage your profile, payments, and account settings.</p>
                </div>
                <div class="flex items-center gap-4">
                    <div class="relative" id="user-dropdown">
                        <button id="dropdown-toggle" class="flex items-center gap-2 p-2 rounded-lg hover:bg-slate-200 dark:hover:bg-slate-700">
                            <span class="font-semibold text-sm"><%= user.name %></span>
                            <i class="fas fa-chevron-down text-xs"></i>
                        </button>
                        <div id="dropdown-menu" class="absolute hidden right-0 mt-2 w-48 bg-white dark:bg-slate-800 rounded-lg shadow-xl z-10 border border-slate-200 dark:border-slate-700 py-1">
                            <a href="/logout" class="flex items-center gap-3 px-4 py-2 text-sm text-slate-700 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-700">
                                <i class="fa-solid fa-arrow-right-from-bracket"></i>
                                <span>Logout</span>
                            </a>
                        </div>
                    </div>
                    <button id="theme-toggle" class="w-10 h-10 flex items-center justify-center rounded-lg hover:bg-slate-200 dark:hover:bg-slate-700">
                        <i class="fas fa-moon"></i>
                    </button>
                </div>
            </header>

            <div>
                <div class="border-b border-slate-200 dark:border-slate-700">
                    <nav class="flex space-x-8" aria-label="Tabs">
                        <button data-tab-target="#profile" class="tab-link active-tab font-medium whitespace-nowrap py-3 px-1 border-b-0 rounded-lg bg-blue-100 text-blue-700 dark:bg-gray-700 dark:text-white">
                            Profile
                        </button>
                        <button data-tab-target="#payment" class="tab-link text-slate-500 dark:text-slate-400 hover:text-slate-700 dark:hover:text-slate-200 font-medium whitespace-nowrap py-3 px-1 border-b-2 border-transparent">
                            Payment
                        </button>
                        <button data-tab-target="#my-account" class="tab-link text-slate-500 dark:text-slate-400 hover:text-slate-700 dark:hover:text-slate-200 font-medium whitespace-nowrap py-3 px-1 border-b-2 border-transparent">
                            My Account
                        </button>
                    </nav>
                </div>

                <div class="mt-8">
                    <div id="profile" class="tab-panel space-y-8">
                        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-md p-6">
                            <h2 class="text-xl font-semibold text-slate-900 dark:text-white mb-6">Profile Information</h2>
                             <form class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label for="full-name" class="block text-sm font-medium text-slate-700 dark:text-slate-300">Full Name</label>
                                    <input type="text" id="full-name" value="<%= user.name %>" class="mt-1 block w-full border border-slate-300 dark:border-slate-600 rounded-md bg-white dark:bg-slate-700 py-2 px-3 focus:outline-none focus:ring-1 focus:ring-[#C0392B]">
                                </div>
                                <div>
                                    <label for="email" class="block text-sm font-medium text-slate-700 dark:text-slate-300">Email Address</label>
                                    <input type="email" id="email" value="customer.demo@example.com" class="mt-1 block w-full border border-slate-300 dark:border-slate-600 rounded-md bg-white dark:bg-slate-700 py-2 px-3 focus:outline-none focus:ring-1 focus:ring-[#C0392B]">
                                </div>
                                <div>
                                    <label for="phone" class="block text-sm font-medium text-slate-700 dark:text-slate-300">Phone Number</label>
                                    <input type="tel" id="phone" value="+966 55 123 4567" class="mt-1 block w-full border border-slate-300 dark:border-slate-600 rounded-md bg-white dark:bg-slate-700 py-2 px-3 focus:outline-none focus:ring-1 focus:ring-[#C0392B]">
                                </div>
                                <div>
                                    <label for="account-no" class="block text-sm font-medium text-slate-700 dark:text-slate-300">Account Number</label>
                                    <input type="text" id="account-no" value="987-654-3210" class="mt-1 block w-full border border-slate-300 dark:border-slate-600 rounded-md bg-slate-100 dark:bg-slate-800 py-2 px-3" readonly>
                                </div>
                                <div class="md:col-span-2">
                                    <label for="address" class="block text-sm font-medium text-slate-700 dark:text-slate-300">Service Address</label>
                                    <textarea id="address" rows="3" class="mt-1 block w-full border border-slate-300 dark:border-slate-600 rounded-md bg-white dark:bg-slate-700 py-2 px-3 focus:outline-none focus:ring-1 focus:ring-[#C0392B]">1234 Olaya St, Al-Sulimaniah, Riyadh 12245, Saudi Arabia</textarea>
                                </div>
                                 <div>
                                    <label for="meter-id" class="block text-sm font-medium text-slate-700 dark:text-slate-300">Meter ID</label>
                                    <input type="text" id="meter-id" value="SA-RYD-001" class="mt-1 block w-full border border-slate-300 dark:border-slate-600 rounded-md bg-slate-100 dark:bg-slate-800 py-2 px-3" readonly>
                                </div>
                                <div class="md:col-span-2 text-right pt-2">
                                    <button type="submit" class="px-5 py-2 bg-[#C0392B] text-white rounded-lg font-semibold hover:bg-[#A93226]">Update Profile</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div id="payment" class="tab-panel hidden space-y-8">
                        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-md p-6">
                            <div class="flex justify-between items-center mb-6">
                                <h2 class="text-xl font-semibold text-slate-900 dark:text-white">Preferred Payment Methods</h2>
                                <button class="flex items-center gap-2 px-4 py-2 bg-[#C0392B] text-white rounded-lg font-semibold hover:bg-[#A93226]">
                                    <i class="fa-solid fa-plus"></i>
                                    <span>Add New Method</span>
                                </button>
                            </div>
                            <div class="space-y-4">
                                <% paymentMethods.forEach(method => { %>
                                    <div class="border border-slate-200 dark:border-slate-700 rounded-lg p-4 flex items-center justify-between">
                                        <div class="flex items-center gap-4">
                                            <% if (method.type === 'Visa') { %>
                                                <i class="fa-brands fa-cc-visa text-3xl text-blue-600"></i>
                                            <% } else { %>
                                                <i class="fa-solid fa-building-columns text-3xl text-slate-500"></i>
                                            <% } %>
                                            <div>
                                                <p class="font-medium"><%= method.type %> <%= method.details %></p>
                                                <p class="text-sm text-slate-500 dark:text-slate-400"><%= method.expiry || method.accountType %></p>
                                            </div>
                                            <% if (method.isDefault) { %>
                                                <span class="px-2 py-1 text-xs font-medium rounded-full bg-sky-100 text-sky-800 dark:bg-sky-900 dark:text-sky-300">Default</span>
                                            <% } %>
                                        </div>
                                        <div class="flex items-center gap-6 text-sm font-medium">
                                            <% if (!method.isDefault) { %>
                                                <button class="text-slate-600 dark:text-slate-300 hover:text-[#C0392B]">Set as Default</button>
                                            <% } else { %>
                                                <button class="text-slate-600 dark:text-slate-300 hover:text-[#C0392B]">Edit</button>
                                            <% } %>
                                            <button class="text-red-500 hover:text-red-700">Remove</button>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                         </div>
                         <div class="bg-white dark:bg-slate-800 rounded-xl shadow-md p-6">
                            <h2 class="text-xl font-semibold text-slate-900 dark:text-white mb-4">Auto-Pay Settings</h2>
                            <div class="flex justify-between items-center">
                                <div>
                                    <h3 class="font-medium text-slate-800 dark:text-slate-200">Enable Auto-Pay</h3>
                                    <p class="text-sm text-slate-500 dark:text-slate-400 mt-1">Automatically pay your bills on the due date using your default payment method.</p>
                                </div>
                                <label for="autoPayToggle" class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" id="autoPayToggle" class="sr-only peer" checked>
                                    <div class="w-11 h-6 bg-slate-200 peer-focus:outline-none rounded-full peer dark:bg-slate-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-slate-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-slate-600 peer-checked:bg-[#C0392B]"></div>
                                </label>
                            </div>
                         </div>
                    </div>

                    <div id="my-account" class="tab-panel hidden space-y-8">
                        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-md p-6">
                            <h2 class="text-xl font-semibold text-slate-900 dark:text-white mb-6">Change Password</h2>
                            <form class="space-y-4">
                                <div>
                                    <label for="current-password" class="block text-sm font-medium text-slate-700 dark:text-slate-300">Current Password</label>
                                    <input type="password" id="current-password" placeholder="Enter current password" class="mt-1 block w-full border border-slate-300 dark:border-slate-600 rounded-md bg-white dark:bg-slate-700 py-2 px-3 focus:outline-none focus:ring-1 focus:ring-[#C0392B]">
                                </div>
                                <div>
                                    <label for="new-password" class="block text-sm font-medium text-slate-700 dark:text-slate-300">New Password</label>
                                    <input type="password" id="new-password" placeholder="Enter new password" class="mt-1 block w-full border border-slate-300 dark:border-slate-600 rounded-md bg-white dark:bg-slate-700 py-2 px-3 focus:outline-none focus:ring-1 focus:ring-[#C0392B]">
                                </div>
                                <div>
                                    <label for="confirm-password" class="block text-sm font-medium text-slate-700 dark:text-slate-300">Confirm New Password</label>
                                    <input type="password" id="confirm-password" placeholder="Confirm new password" class="mt-1 block w-full border border-slate-300 dark:border-slate-600 rounded-md bg-white dark:bg-slate-700 py-2 px-3 focus:outline-none focus:ring-1 focus:ring-[#C0392B]">
                                </div>
                                <div class="text-right pt-2">
                                    <button type="submit" class="px-5 py-2 bg-[#C0392B] text-white rounded-lg font-semibold hover:bg-[#A93226]">Change Password</button>
                                </div>
                            </form>
                        </div>
                        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-md p-6">
                            <h2 class="text-xl font-semibold text-slate-900 dark:text-white mb-6">Notification & Language</h2>
                             <div class="space-y-6">
                                 <div>
                                    <h3 class="font-medium text-slate-800 dark:text-slate-200 mb-4">Notifications</h3>
                                    <div class="space-y-4">
                                    <div class="flex items-center justify-between">
                                            <p class="text-sm text-slate-600 dark:text-slate-300">Email notifications for new invoices</p>
                                            <label for="emailToggle" class="relative inline-flex items-center cursor-pointer">
                                                <input type="checkbox" id="emailToggle" class="sr-only peer" checked>
                                                <div class="w-11 h-6 bg-slate-200 peer-focus:outline-none rounded-full peer dark:bg-slate-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-slate-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-slate-600 peer-checked:bg-[#C0392B]"></div>
                                            </label>
                                    </div>
                                    <div class="flex items-center justify-between">
                                            <p class="text-sm text-slate-600 dark:text-slate-300">SMS alerts for payment due dates</p>
                                            <label for="smsToggle" class="relative inline-flex items-center cursor-pointer">
                                                <input type="checkbox" id="smsToggle" class="sr-only peer">
                                                <div class="w-11 h-6 bg-slate-200 peer-focus:outline-none rounded-full peer dark:bg-slate-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-slate-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-slate-600 peer-checked:bg-[#C0392B]"></div>
                                            </label>
                                    </div>
                                    </div>
                                </div>
                                <div class="flex items-center justify-between border-t border-slate-200 dark:border-slate-700 pt-6">
                                    <div>
                                        <h3 class="font-medium text-slate-800 dark:text-slate-200">Language</h3>
                                        <p class="text-sm text-slate-500 dark:text-slate-400">Choose your preferred language.</p>
                                    </div>
                                    <div class="flex items-center gap-2 rounded-lg bg-slate-100 dark:bg-slate-700 p-1">
                                        <button class="px-3 py-1 text-sm font-semibold bg-white dark:bg-slate-800 text-[#C0392B] rounded-md shadow">English</button>
                                        <button class="px-3 py-1 text-sm font-semibold">العربية</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
    document.addEventListener('DOMContentLoaded', () => {
        // Tab Switching Logic
        const tabLinks = document.querySelectorAll('.tab-link');
        const tabPanels = document.querySelectorAll('.tab-panel');

        tabLinks.forEach(link => {
            link.addEventListener('click', () => {
                const target = document.querySelector(link.dataset.tabTarget);
                tabLinks.forEach(l => {
                    l.classList.remove('active-tab', 'bg-blue-50', 'text-blue-700', 'dark:bg-blue-900/40', 'dark:text-blue-300', 'border-b-0', 'rounded-lg');
                    l.classList.add('text-slate-500', 'dark:text-slate-400', 'border-b-2', 'border-transparent');
                });
                link.classList.add('active-tab', 'bg-blue-50', 'text-blue-700', 'dark:bg-blue-900/40', 'dark:text-blue-300', 'border-b-0', 'rounded-lg');
                link.classList.remove('text-slate-500', 'dark:text-slate-400', 'border-b-2', 'border-transparent');
                tabPanels.forEach(panel => {
                    panel.classList.add('hidden');
                });
                target.classList.remove('hidden');
            });
        });
    });
    </script>
    <footer class="fixed bottom-4 right-4 text-xs text-slate-500 dark:text-slate-400">
        <p>© REVARTIX Confidential, REVARTIX, All Rights Reserved. 2025.</p>
        <p class="text-right">www.revartix.com | reva.zone@revartix.com</p>
    </footer>

<%- include('partials/scripts') %>
</body>
</html>