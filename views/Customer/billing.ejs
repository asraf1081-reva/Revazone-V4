<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Billing & Payments | Reva Platform</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script> tailwind.config = { darkMode: 'class' } </script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <style> body { font-family: 'Inter', sans-serif; } </style>
</head>
<body class="bg-slate-100 dark:bg-slate-900 text-slate-800 dark:text-slate-200 transition-colors duration-300">
    <div class="flex">
        <%- include('partials/sidebar') %>
        <main class="flex-1 h-screen overflow-y-auto p-6 md:p-8">
            <header class="flex justify-between items-center mb-8">
                <div>
                    <h1 class="text-3xl font-bold text-slate-900 dark:text-white">Billing & Payments</h1>
                    <p class="text-slate-500 dark:text-slate-400 mt-1">Manage your invoices, payments, and tariff plan.</p>
                </div>
                <div class="flex items-center gap-4">
                    <div class="relative" id="user-dropdown">
                        <button id="dropdown-toggle" class="flex items-center gap-2 p-2 rounded-lg hover:bg-slate-200 dark:hover:bg-slate-700">
                            <span class="font-semibold text-sm"><%= user.name %></span>
                            <i class="fas fa-chevron-down text-xs"></i>
                        </button>
                        <div id="dropdown-menu" class="absolute hidden right-0 mt-2 w-48 bg-white dark:bg-slate-800 rounded-lg shadow-xl z-10 border border-slate-200 dark:border-slate-700 py-1">
                            <a href="/logout" class="flex items-center gap-3 px-4 py-2 text-sm text-slate-700 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-700">
                                <i class="fa-solid fa-arrow-right-from-bracket"></i>
                                <span>Logout</span>
                            </a>
                        </div>
                    </div>
                    <button id="theme-toggle" class="w-10 h-10 flex items-center justify-center rounded-lg hover:bg-slate-200 dark:hover:bg-slate-700">
                        <i class="fas fa-moon"></i>
                    </button>
                </div>
            </header>

            <section class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <div class="lg:col-span-2 space-y-8">
                    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-md">
                        <div class="p-6"><h2 class="text-xl font-semibold text-slate-900 dark:text-white">My Invoices</h2></div>
                        <div class="overflow-x-auto">
                            <table class="min-w-full text-sm">
                                <thead class="bg-slate-50 dark:bg-slate-700/50">
                                    <tr>
                                        <th class="px-6 py-3 text-left font-medium text-slate-500 dark:text-slate-400">Invoice ID</th>
                                        <th class="px-6 py-3 text-left font-medium text-slate-500 dark:text-slate-400">Due Date</th>
                                        <th class="px-6 py-3 text-left font-medium text-slate-500 dark:text-slate-400">Amount</th>
                                        <th class="px-6 py-3 text-left font-medium text-slate-500 dark:text-slate-400">Status</th>
                                        <th class="px-6 py-3 text-left font-medium text-slate-500 dark:text-slate-400">Action</th>
                                    </tr>
                                </thead>
                                <tbody id="invoices-table-body" class="divide-y divide-slate-200 dark:divide-slate-700">
                                    <% invoices.forEach(invoice => { %>
                                        <tr>
                                            <td class="px-6 py-4 font-medium text-slate-800 dark:text-slate-200"><%= invoice.id %></td>
                                            <td class="px-6 py-4 text-slate-600 dark:text-slate-300"><%= invoice.dueDate %></td>
                                            <td class="px-6 py-4 text-slate-600 dark:text-slate-300">SAR <%= invoice.amount %></td>
                                            <td class="px-6 py-4">
                                                <% if (invoice.status === 'Paid') { %>
                                                    <span class="px-2.5 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300">Paid</span>
                                                <% } else { %>
                                                    <span class="px-2.5 py-1 text-xs font-medium rounded-full bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300"><%= invoice.status %></span>
                                                <% } %>
                                            </td>
                                            <td class="px-6 py-4">
                                                <% if (invoice.status === 'Due' || invoice.status === 'Overdue') { %>
                                                    <button class="font-semibold text-[#C0392B] hover:text-[#A93226]">Pay Now</button>
                                                <% } else { %>
                                                    <button data-invoice-id="<%= invoice.id %>" class="view-invoice-btn font-semibold text-slate-500 hover:text-slate-700">View</button>
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-md p-6">
                        <h2 class="text-xl font-semibold text-slate-900 dark:text-white mb-4">Payment History</h2>
                        <ul class="divide-y divide-slate-200 dark:divide-slate-700">
                           <% paymentHistory.forEach(payment => { %>
                                <li class="py-4 flex items-center justify-between">
                                    <div class="flex items-center gap-4">
                                        <div class="w-10 h-10 flex items-center justify-center bg-slate-100 dark:bg-slate-700 rounded-full">
                                            <i class="fa-solid fa-receipt text-slate-500 dark:text-slate-400"></i>
                                        </div>
                                        <div>
                                            <p class="font-semibold text-slate-800 dark:text-slate-200"><%= payment.description %></p>
                                            <p class="text-sm text-slate-500 dark:text-slate-400"><%= payment.date %> via <%= payment.method %></p>
                                        </div>
                                    </div>
                                    <div class="text-right">
                                        <p class="font-semibold text-slate-800 dark:text-slate-200"><%= payment.amount %></p>
                                        <a href="<%= payment.receiptUrl %>" class="text-sm font-medium text-[#C0392B] hover:underline">Download Receipt</a>
                                    </div>
                                </li>
                           <% }); %>
                        </ul>
                    </div>
                </div>
                <div class="space-y-8">
                    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-md p-6">
                        <h3 class="text-lg font-semibold text-slate-900 dark:text-white">Make a Payment</h3>
                        <div class="text-center my-4">
                            <p class="text-sm text-slate-500 dark:text-slate-400">Total Amount Due</p>
                            <p class="text-4xl font-bold text-[#C0392B]">SAR <%= plan.totalDue %></p>
                        </div>
                        <div class="space-y-3">
                            <p class="text-sm font-medium text-center text-slate-500 dark:text-slate-400">Select payment method:</p>
                            <div class="grid grid-cols-2 gap-3">
                                <button class="p-3 border-2 border-[#C0392B] bg-[#C0392B]/10 rounded-lg text-center font-semibold text-[#C0392B]"><i class="fa-brands fa-cc-visa mr-2"></i>Card</button>
                                <button class="p-3 border border-slate-300 dark:border-slate-600 rounded-lg text-center font-medium text-slate-700 dark:text-slate-300 hover:border-[#C0392B] hover:bg-[#C0392B]/10">Mada</button>
                                <button class="p-3 border border-slate-300 dark:border-slate-600 rounded-lg text-center font-medium text-slate-700 dark:text-slate-300 hover:border-[#C0392B] hover:bg-[#C0392B]/10"><i class="fa-brands fa-apple-pay mr-2"></i>Apple Pay</button>
                                <button class="p-3 border border-slate-300 dark:border-slate-600 rounded-lg text-center font-medium text-slate-700 dark:text-slate-300 hover:border-[#C0392B] hover:bg-[#C0392B]/10">SADAD</button>
                            </div>
                        </div>
                        <button class="w-full mt-6 bg-[#C0392B] text-white font-semibold py-3 rounded-lg hover:bg-[#A93226]">
                            Proceed to Pay SAR <%= plan.totalDue %>
                        </button>
                    </div>
                    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-md p-6">
                        <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">My Tariff Plan</h3>
                        <p class="text-sm font-semibold text-slate-700 dark:text-slate-200"><%= plan.type %></p>
                        <p class="text-xs text-slate-500 dark:text-slate-400">Water Tariff Block Rates (per cubic meter)</p>
                        <ul class="text-sm mt-4 space-y-2">
                           <% plan.rates.forEach(rate => { %>
                                <li class="flex justify-between items-center">
                                    <span class="text-slate-600 dark:text-slate-300">Tier: <%= rate.tier %></span>
                                    <span class="font-semibold text-slate-800 dark:text-slate-200">SAR <%= rate.rate %></span>
                                </li>
                           <% }); %>
                        </ul>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <%- include('partials/invoice-modal') %>
    <%- include('partials/scripts') %>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const invoicesData = <%- JSON.stringify(invoices) %>;
            const modal = document.getElementById('invoice-modal');
            const closeModalBtn = document.getElementById('modal-close-button');
            const tableBody = document.getElementById('invoices-table-body');

            const openModal = (invoiceId) => {
                const invoice = invoicesData.find(inv => inv.id === invoiceId);
                if (!invoice || !invoice.customerName) {
                    alert('Detailed information for this invoice is not available.');
                    return;
                }
                
                document.getElementById('modal-invoice-id').textContent = invoice.id;
                document.getElementById('modal-customer-name').textContent = invoice.customerName;
                document.getElementById('modal-account-number').textContent = invoice.accountNumber;
                document.getElementById('modal-address').textContent = invoice.address;
                document.getElementById('modal-meter-number').textContent = invoice.meterNumber;
                document.getElementById('modal-meter-diameter').textContent = invoice.meterDiameter;
                document.getElementById('modal-start-details').textContent = `${invoice.consumptionStartDate} (${invoice.startRead})`;
                document.getElementById('modal-end-details').textContent = `${invoice.consumptionEndDate} (${invoice.endRead})`;
                document.getElementById('modal-consumption-value').textContent = `SAR ${invoice.consumptionValue}`;
                document.getElementById('modal-service-fee').textContent = `SAR ${invoice.serviceFee}`;
                document.getElementById('modal-meter-tariff').textContent = `SAR ${invoice.meterTariff}`;
                document.getElementById('modal-before-vat').textContent = `SAR ${invoice.beforeVAT}`;
                document.getElementById('modal-vat-value').textContent = `SAR ${invoice.vatValue}`;
                document.getElementById('modal-total-amount').textContent = `SAR ${invoice.totalAmount}`;
                
                modal.classList.remove('hidden');
            };

            const closeModal = () => modal.classList.add('hidden');

            tableBody.addEventListener('click', (e) => {
                if (e.target.classList.contains('view-invoice-btn')) {
                    const invoiceId = e.target.getAttribute('data-invoice-id');
                    openModal(invoiceId);
                }
            });

            closeModalBtn.addEventListener('click', closeModal);
            modal.addEventListener('click', (e) => {
                if (e.target.id === 'invoice-modal') closeModal();
            });
        });
    </script>
</body>
</html>